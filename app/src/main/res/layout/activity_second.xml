<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#E6E6FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/username_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txtnama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:ems="10"
                            android:hint="NAMA"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phone_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtphone"
                            android:fontFamily="sans-serif-black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:ems="10"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="PHONE"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pos_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtpos"
                            android:fontFamily="sans-serif-black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:ems="10"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="KODE POS"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/kota_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtkota"
                            android:fontFamily="sans-serif-black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:ems="10"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="KOTA"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/alamat_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtalamat"
                            android:fontFamily="sans-serif-black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:ems="10"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="ALAMAT"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/konversi_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/txtkonversi"
                            android:fontFamily="sans-serif-black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:ems="10"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="20dp"
                            android:hint="GEO ALAMAT"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <Spinner
                        android:id="@+id/spinnerpickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="sans-serif-black"></Spinner>


                    <Spinner
                        android:id="@+id/spinnerreasongagal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="sans-serif-black"></Spinner>

                    <Spinner
                        android:id="@+id/spinnerreasoncancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="sans-serif-black"></Spinner>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/catatan_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtnote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Masukkan Catatan"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:id="@+id/btndate"
                        android:layout_width="253dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/imagenpwp"
                        android:gravity="center"
                        android:text="Tanggal Reschedule"
                        android:textColor="#ffff"
                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tanggal_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txtdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Tanggal Reschedule"
                        android:enabled="false"></EditText>

                    </com.google.android.material.textfield.TextInputLayout>
<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="20dp"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:layout_marginRight="30dp"-->
<!--                        android:textSize="24px"-->
<!--                        android:fontFamily="sans-serif-black"-->
<!--                        android:text="Note : Untuk hasil maksimal saat upload gambar ambil file dari galeri"></TextView>-->


                    <Button
                        android:id="@+id/btnktp"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/imagenpwp"
                        android:gravity="center"
                        android:text="foto NPWP"
                        android:textColor="#ffff"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/imagenpwp"
                        android:src="@drawable/foun"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:id="@+id/btnnpwp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/imagenpwp"
                        android:gravity="center"
                        android:text="foto ktp"
                        android:textColor="#ffff"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/imagektp"
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:src="@drawable/foun" />

                    <Button
                        android:id="@+id/btnbukti"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/imagenpwp"
                        android:gravity="center"
                        android:text="foto bukti"
                        android:textColor="#ffff"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imagebukti"
                        android:src="@drawable/iclauncerblack"
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:layout_gravity="center_horizontal" />

                    <Button
                        android:id="@+id/btnkirim"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/btnkirim"
                        android:gravity="center"
                        android:text="kirim data"
                        android:textColor="#ffff"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtpickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"></TextView>

                    <TextView
                        android:id="@+id/txtlat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>